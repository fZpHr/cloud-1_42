services:
  mysql:
    image: mysql:5.7
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: {{ mysql_password }}
      MYSQL_DATABASE: wordpress
    volumes:
      - mysql_data:/var/lib/mysql
    networks:
      - cloud1

  wordpress:
    image: wordpress:5.9
    restart: always
    volumes:
      - wordpress_data:/var/www/html
    environment:
      WORDPRESS_DB_HOST: mysql:3306
      WORDPRESS_DB_NAME: wordpress
      WORDPRESS_DB_USER: root
      WORDPRESS_DB_PASSWORD: {{ mysql_password }}
    networks:
      - cloud1
    depends_on:
      - mysql

  phpmyadmin:
    image: phpmyadmin/phpmyadmin:5.1
    restart: always
    environment:
      PMA_HOST: mysql
      MYSQL_ROOT_PASSWORD: {{ mysql_password }}
    networks:
      - cloud1
    depends_on:
      - mysql

  nginx:
    image: jwilder/nginx-proxy
    container_name: nginx
    restart: always
    environment:
      - DEFAULT_HOST=wordpress.local
      - VIRTUAL_HOST=wordpress.local,phpmyadmin.local
    volumes:
      - /var/run/docker.sock:/tmp/docker.sock:ro
      - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
    networks:
      - cloud1
    depends_on:
      - wordpress
      - phpmyadmin
    ports:
      - "80:80"
      - "443:443"

volumes:
  wordpress_data:
  mysql_data:

networks:
  cloud1:
    driver: bridge